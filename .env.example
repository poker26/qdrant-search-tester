# Qdrant Connection
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=

# Collection Settings
COLLECTION_NAME=distill_hybrid
# Размерность вектора (автоматически определяется по модели, но можно переопределить)
# OpenAI: 1536, BGM-M3: 1024
COLLECTION_VECTOR_SIZE=1024
COLLECTION_DISTANCE=COSINE

# Embedding Model Configuration
# Варианты: "openai" или "bgm-m3"
EMBEDDING_MODEL=bgm-m3

# OpenAI (если EMBEDDING_MODEL=openai)
OPENAI_API_KEY=
OPENAI_BASE_URL=https://api.openai.com/v1

# BGM-M3 Self-hosted (если EMBEDDING_MODEL=bgm-m3)
BGM_M3_URL=http://46.173.25.31
BGM_M3_PORT=8000
BGM_M3_ENDPOINT=/embed
BGM_M3_TIMEOUT=60.0

# Test Settings
MAX_ALLOWED_RANK=3
MIN_SCORE_THRESHOLD=0.3
TEST_TIMEOUT=30

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Dashboard
DASHBOARD_PORT=8501
DASHBOARD_HOST=0.0.0.0
DASHBOARD_THEME=light

# Report Settings
REPORT_FORMAT=json,csv
REPORT_DIR=./reports
REPORT_RETENTION_DAYS=30